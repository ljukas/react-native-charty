{
	"compilerOptions": {
		"jsx": "react-native",
		"module": "CommonJS",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"declaration": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"]
		}
	},

	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts"]
}
